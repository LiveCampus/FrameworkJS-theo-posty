{
  "openapi": "3.0.0",
  "info": {
    "title": "Livecampus FrameworkJS",
    "description": "A simple api to request data for an ecommerce website",
    "version": "1.0.0",
    "contact": {
      "name": "Theo Posty",
      "email": "thso@posty.fr",
      "url": "https://theo.posty.fr"
    }
  },
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:8000/api/v1/" }],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Product": {
        "allOf": [
          {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string",
                "default": "productID"
              }
            }
          },
          {
            "$ref": "#/components/schemas/NewProduct"
          }
        ]
      },
      "NewProduct": {
        "type": "object",
        "required": ["name", "price"],
        "properties": {
          "name": {
            "type": "string",
            "default": "product name"
          },
          "price": {
            "type": "integer",
            "format": "int64",
            "default": 10
          },
          "description": {
            "type": "string",
            "default": "product description"
          },
          "image": {
            "type": "string",
            "default": "product image"
          }
        }
      },
      "Order": {
        "allOf": [
          {
            "type": "object",
            "required": ["id", "date", "user", "products"],
            "properties": {
              "id": {
                "type": "string",
                "default": "orderID"
              },
              "date": {
                "type": "string",
                "default": "01/01/2023"
              },
              "user": {
                "type": "string",
                "default": "some_user_id"
              }
            }
          },
          {
            "$ref": "#/components/schemas/UpdateOrder"
          }
        ]
      },
      "UpdateOrder": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["idle", "valid", "paid", "delivered", "canceled"],
            "default": "idle"
          }
        }
      },
      "User": {
        "type": "object",
        "required": ["id", "email", "role"],
        "properties": {
          "id": {
            "type": "string",
            "default": "userID"
          },
          "email": {
            "type": "string",
            "default": "example@email.fr"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "user"],
            "default": "user"
          }
        }
      },
      "NewUser": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "default": "example@email.fr"
          },
          "password": {
            "type": "string",
            "default": "Azerty1!"
          }
        }
      },
      "UpdateUser": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "default": "example@email.fr"
          },
          "password": {
            "type": "string",
            "default": "Azerty1!"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "user"],
            "default": "user"
          }
        }
      },
      "AuthUser": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "default": "example@email.fr"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "user"],
            "default": "user"
          },
          "token": {
            "type": "string",
            "default": "some_token_string"
          }
        }
      },
      "AddProductToOrder": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "default": "id_of_a_product"
          },
          "quantity": {
            "type": "integer",
            "format": "int64",
            "default": 1
          }
        }
      }
    }
  },
