{
  "openapi": "3.0.0",
  "info": {
    "title": "Livecampus FrameworkJS",
    "description": "A simple api to request data for an ecommerce website",
    "version": "1.0.0",
    "contact": {
      "name": "Theo Posty",
      "email": "thso@posty.fr",
      "url": "https://theo.posty.fr"
    }
  },
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:8000/api/v1/" }],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "Product": {
        "allOf": [
          {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string",
                "default": "productID"
              }
            }
          },
          {
            "$ref": "#/components/schemas/NewProduct"
          }
        ]
      },
      "NewProduct": {
        "type": "object",
        "required": ["name", "price"],
        "properties": {
          "name": {
            "type": "string",
            "default": "product name"
          },
          "price": {
            "type": "integer",
            "format": "int64",
            "default": 10
          },
          "description": {
            "type": "string",
            "default": "product description"
          },
          "image": {
            "type": "string",
            "default": "product image"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [],
  "paths": {
    "/products": {
      "get": {
        "tags": ["PRODUCT"],
        "summary": "Get all the products",
        "description": "Get all the products",
        "operationId": "getProducts",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Product"
                      }
                    },
                    "error": {
                      "type": "string",
                      "nullable": true,
                      "default": null
                    },
                    "statusCode": {
                      "type": "integer",
                      "format": "int8",
                      "default": 200
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["PRODUCT"],
        "summary": "Creates a new product. Duplicates are not allowed",
        "description": "Creates a new product. Duplicates are not allowed",
        "operationId": "addProduct",
        "requestBody": {
          "description": "Product to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewProduct"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Product"
                    },
                    "error": {
                      "type": "string",
                      "nullable": true,
                      "default": null
                    },
                    "statusCode": {
                      "type": "integer",
                      "format": "int8",
                      "default": 201
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "nullable": true,
                      "default": null
                    },
                    "error": {
                      "type": "string",
                      "default": "error message"
                    },
                    "statusCode": {
                      "type": "integer",
                      "format": "int8",
                      "default": 400
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
